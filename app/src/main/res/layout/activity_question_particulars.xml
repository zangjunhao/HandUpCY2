<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context="com.example.handupcy.QuestionParticularsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#58B1FC"
            android:gravity="center"
            android:text="求助"
            android:textSize="10pt"
            android:textStyle="bold"
            android:id="@+id/button" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/last" />

    <TextView
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="。。。"
        android:textSize="10pt" />
    <TextView
        android:id="@+id/particular_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="13pt"
        android:textColor="#262829"
        android:textStyle="bold"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="10dp"
      />
    <TextView
        android:id="@+id/describe"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="12pt"
        android:textColor="#262829"
        android:layout_marginTop="130dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="280dp"/>
    <com.example.handupcy.CircleImage
        android:id="@+id/touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/white"
        app:KuangColor="#F6F6F6"
        app:KuangWidth="0dp"/>

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="85dp"
        android:textColor="#555555"
        android:textSize="11pt" />

    <ImageView
        android:id="@+id/gender2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/boy"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="124dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="417dp"
        android:src="@drawable/reward"/>
    <TextView
        android:id="@+id/particular_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/name"
        android:layout_alignParentRight="true"

        android:layout_marginRight="20dp"
        android:layout_marginTop="415dp"
        android:textSize="10pt"
        android:text="222"
        android:textColor="#777777"/>
</RelativeLayout>
