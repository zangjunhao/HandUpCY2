<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="6pt"
    app:cardBackgroundColor="#FEFEFE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.handupcy.CircleImage
            android:id="@+id/circleImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/white"
            app:KuangColor="#FEFEFE"
            app:KuangWidth="0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height='wrap_content'
            android:layout_marginBottom="68dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@id/circleImage"

            android:textColor="#555555"
            android:textSize="11pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/circleImage"
            android:layout_toLeftOf="@id/name"

            android:textColor="#999999"
            android:textSize="9pt" />

        <ImageView
            android:id="@+id/gender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/name"
            android:layout_toEndOf="@+id/name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/boy" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/reward"
            android:layout_alignRight="@id/reward"
            android:layout_marginRight="70dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/reward"/>
        <TextView
            android:id="@+id/reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/name"
            android:layout_alignParentRight="true"

            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:textSize="10pt"
            android:text="222"
            android:textColor="#777777"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxEms="10"
            android:textSize="12pt"
            android:textColor="#333333"
            android:layout_alignTop="@id/name"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/miaos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:maxLines="2"
            android:maxEms="30"
            android:ellipsize="end"
            android:textColor="#555555"
            android:layout_alignTop="@id/title"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>