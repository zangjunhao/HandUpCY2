<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="3pt"
    app:cardBackgroundColor="#FEFEFE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.handupcy.CircleImage
            android:id="@+id/circleImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/white"
            app:KuangColor="#FEFEFE"
            app:KuangWidth="0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height='wrap_content'
            android:layout_alignBottom="@id/circleImage"
            android:layout_toRightOf="@id/circleImage"
            android:layout_marginLeft="7dp"
            android:textColor="#555555"
            android:text="222"
            android:textSize="10pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/circleImage"
            android:layout_toLeftOf="@id/name"

            android:textColor="#999999"
            android:textSize="9pt" />

        <ImageView
            android:id="@+id/gender"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/name"
            android:layout_alignBottom="@id/name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/boy" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/reward"
            android:layout_alignBottom="@id/reward"
            android:src="@drawable/reward"/>
        <TextView
            android:id="@+id/reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/name"
            android:layout_alignParentRight="true"

            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:textSize="8pt"
            android:textColor="#777777"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxEms="10"
            android:textSize="10pt"
            android:textColor="#333333"
           android:layout_below="@id/circleImage"
            android:layout_marginTop="8dp"
            android:text="2222"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/miaos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:maxLines="1"
            android:maxEms="30"
            android:ellipsize="end"
            android:textColor="#555555"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>