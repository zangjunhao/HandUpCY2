<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context="com.example.handupcy.AskQuestionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#58B1FC"
        android:gravity="center"
        android:text="求助"
        android:textSize="10pt"
        android:textStyle="bold"
        android:id="@+id/button" />
    </RelativeLayout>
        <ImageView
            android:id="@+id/last"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/last" />
    <TextView
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_alignParentRight="true"
        android:text="下一步"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/ask_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#262829"
        android:textColorHint="#647474"
        android:background="@null"
        android:textSize="10pt"
        android:hint="请输入标题(20字以内)"
        android:maxLength="20"
        android:maxLines="1"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittextline"/>
    <EditText
        android:id="@+id/ask_miaos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#262829"
        android:textColorHint="#647474"
        android:background="@null"
        android:textSize="10pt"
        android:hint="描述你的问题或需求，表达清楚，越容易获得帮助哦（100个字以内）"
        android:maxLength="100"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ask_miaos"
        android:background="@drawable/edittextline"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/topic"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/photo"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="90dp"
        android:layout_alignParentBottom="true"
        />
    <CheckBox
        android:id="@+id/is_lim"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="匿名"
        android:textColor="#292b2b"
        android:textColorHighlight="#c18dfc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
